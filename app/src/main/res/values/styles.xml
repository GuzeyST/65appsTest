<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_item_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_label_size</item>
        <item name="android:textColor">@color/crayola_700</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="label_def_text" parent="label_item_text">
        <item name="android:textSize">@dimen/text_def_size</item>
    </style>

    <style name="label_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_label_size</item>
        <item name="android:textColor">@color/crayola_200</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="card_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

</resources>